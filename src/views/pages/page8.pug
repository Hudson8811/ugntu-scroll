extends ../layouts/default

block variables
	- const title = "2010-2022"
	- var sidebarActive = 2010

block head
	include ../../blocks/modules/overlay/overlayStyle
block content
	.fullPageOverlay.fullPageOverlay--white.active
	.wrapper
		include ../../blocks/modules/sidebar/sidebar
		.scroll-page.y2010
			.y8-110
				.y8-110__numbers
					span.y8-110__numbers-number 2010
					span.y8-110__numbers-line
					span.y8-110__numbers-number 2022
				.y8-110__photos
					img.y8-110__photos-item.y8-110__photos-item--1(src="img/y6-110--1.png" alt="")
					img.y8-110__photos-item.y8-110__photos-item--2(src="img/y6-110--2.png" alt="")
					img.y8-110__photos-item.y8-110__photos-item--3(src="img/y6-110--3.png" alt="")
			.y8-1-80
				.y8-1-80__year.yearConner 2000
			.y8-1
				.y8-1__year.yearConner 2000
				.y8-1__bg
					.y8-1__bg--1
						picture 
							source(media="(max-width: 1100px)", srcset="img/y8-1__bg.png")
							img(src="img/y8-1__bg.png" alt="")
				.y8-1__blockOverlay.blockOverlay
				.y8-1__1
					picture
						img(src="img/y8-1--2-bg.png" alt="")
