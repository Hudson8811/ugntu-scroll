mixin icon(id)
	svg&attributes(attributes)
		use(xlink:href="./images/sprite.svg#" + id)

mixin button(className, href)
	if href
		a.button(href=href, class=className)&attributes(attributes)
			+icon('chevron-right')
	else
		button.button(class=className)&attributes(attributes)
			+icon('chevron-right')

